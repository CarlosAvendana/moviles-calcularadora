<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >
<GridLayout

    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="6"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="5dp">

    <TextView
        android:id="@+id/result"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#78B6F2"
        android:paddingRight="10dp"
        android:textAlignment="textEnd"
        android:textSize="50sp" />



    <Button
        android:id="@+id/slash"
        android:layout_width="101dp"
        android:layout_height="73dp"
        android:backgroundTint="#EEAA47"
        android:text="/"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:backgroundTint="#EEAA47"
        android:text="*"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="101dp"
        android:layout_height="72dp"
        android:backgroundTint="#EEAA47"
        android:text="C"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:backgroundTint="#EEAA47"
        android:text="DEL"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="101dp"
        android:textSize="30dp"
        android:text="7"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="103dp"
        android:textSize="30dp"
        android:text="8" />
    <Button
        android:id="@+id/btn9"
        android:layout_width="102dp"
        android:textSize="30sp"
        android:text="9" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="wrap_content"
        android:backgroundTint="#EEAA47"
        android:text="+"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="101dp"
        android:textSize="30dp"
        android:text="4" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="102dp"
        android:textSize="30dp"
        android:text="5" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="104dp"
        android:textSize="30dp"
        android:text="6" />
    <Button
        android:id="@+id/btn_less"
        android:textSize="30dp"
        android:backgroundTint="#EEAA47"
        android:text="-" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="98dp"
        android:textSize="30dp"
        android:text="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="104dp"
        android:textSize="30dp"
        android:text="2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="101dp"
        android:textSize="30dp"
        android:text="3" />
    <Button
        android:id="@+id/btn_sqrt"
        android:textSize="30dp"
        android:backgroundTint="#EEAA47"
        android:text="âˆš" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="99dp"
        android:textSize="30dp"
        android:text="0" />

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="101dp"
        android:textSize="30dp"
        android:text="." />

    <Button
        android:id="@+id/btn_parentesis"
        android:layout_width="99dp"
        android:textSize="30dp"
        android:text="()" />

    <Button
        android:id="@+id/btn_percentage"
        android:textSize="30dp"
        android:backgroundTint="#EEAA47"
        android:text="%" />

    <Button
        android:id="@+id/btn_sin"
        android:layout_width="102dp"
        android:textSize="30dp"
        android:backgroundTint="#A8A8A8"
        android:text="SIN" />

    <Button
        android:id="@+id/btn_cos"
        android:layout_width="102dp"
        android:textSize="30dp"
        android:text="COS"
        android:backgroundTint="#A8A8A8"/>

    <Button
        android:id="@+id/btn_tan"
        android:layout_width="100dp"
        android:backgroundTint="#A8A8A8"
        android:text="TAN"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_equals"
        android:layout_height="180dp"
        android:layout_rowSpan="3"
        android:backgroundTint="#EEAA47"
        android:text="="
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_csc"
        android:layout_width="102dp"
        android:backgroundTint="#A8A8A8"
        android:text="CSC"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_sec"
        android:layout_width="100dp"
        android:backgroundTint="#A8A8A8"
        android:textSize="30dp"
        android:text="SEC" />

    <Button
        android:id="@+id/btn_ctg"
        android:layout_width="101dp"
        android:backgroundTint="#A8A8A8"
        android:textSize="30dp"
        android:text="CTG" />

    <Button
        android:id="@+id/btn_off"
        android:layout_width="102dp"
        android:textSize="30dp"
        android:backgroundTint="#A8A8A8"
        android:text="OFF" />

    <Button
        android:id="@+id/btn_fact"
        android:layout_width="100dp"
        android:textSize="30dp"
        android:backgroundTint="#A8A8A8"
        android:text="X!" />

    <Button
        android:id="@+id/btn_raised"
        android:layout_width="101dp"
        android:textSize="30dp"
        android:backgroundTint="#A8A8A8"
        android:text="X^" />

</GridLayout>
</ScrollView>